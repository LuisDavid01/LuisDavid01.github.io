---
export interface Props {
	headerText: string;
	headerLink?: string;
	imageLink?: string;
}

const { headerText, headerLink, imageLink } = Astro.props;
---

<div class="flex flex-col self-start rounded-lg border border-card">

	<!-- Header -->
	<div class="px-4 pt-4">
		{headerLink ? (
			<a
				href={headerLink}
				target="_blank"
				rel="noopener noreferrer"
				class="text-sm lg:text-lg font-semibold underline-offset-4 hover:underline hover:text-primary"
			>
				{headerText}
			</a>
		) : (
			<h3 class="text-sm lg:text-lg font-semibold">
				{headerText}
			</h3>
		)}
	</div>

	<!-- Imagen -->
	{imageLink && (
		<div class="mt-3 px-4">
			<div class="relative w-full aspect-[16/9] overflow-hidden rounded-md  flex items-center justify-center">
				<img
					src={imageLink}
					alt="Imagen del proyecto"
					class="max-h-full max-w-full object-contain"
					loading="lazy"
				/>
			</div>
		</div>
	)}

	<!-- Contenido -->
	<div class="flex-1 p-4 text-sm text-muted-foreground">
		<slot />
	</div>
</div>

