---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
import Badge from "../components/Badge.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { formatDate } from "../utils/Date.ts";
const posts: CollectionEntry<"posts">[] = await getCollection("posts");
export const prerender = true;

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Bienvenido a mi portafolio">
	<main class="min-h-screen">
		<Welcome />
		<div class="max-w-4xl mx-auto px-16 py-6">
			<div class="mt-12">
				<header class="mb-12">
					<div
						class="flex flex-col md:flex-row md:items-center md:justify-between mb-4"
					>
						<h1
							class="myName text-3xl md:text-4xl font-bold mb-2 md:mb-0"
						>
							LuisDavid01
						</h1>

						<!-- Redes sociales -->
						<div
							class="top-socials flex gap-3 text-muted-foreground"
						>
							<a
								href="https://github.com/LuisDavid01"
								target="_blank"
								rel="noopener noreferrer"
								class="hover:text-primary transition-colors"
							>
								Github
							</a>
							<a
								href="https://www.linkedin.com/in/luisdavid01/"
								target="_blank"
								rel="noopener noreferrer"
								class="hover:text-primary transition-colors"
							>
								Linkedin
							</a>
						</div>
					</div>
				</header>
				<div class="space-y-2 mb-6">
					<div class="flex items-center gap-2">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							class="text-muted-foreground"
						>
							<path
								fill="currentColor"
								d="M8 2h2v2h2v2h-2v10H8V6H6V4h2zM4 8V6h2v2zm2 10v2H4v2H2V8h2v10zm0 0h2v-2H6zm6 0h-2v-2h2zm2-10V6h-2v2zm2 0h-2v10h-2v2h2v2h2v-2h2v-2h2v-2h2V2h-2v2h-2v2h-2zm0 0h2V6h2v10h-2v2h-2z"
							></path>
						</svg>
						<span>Alajuela, Costa Rica</span>
					</div>

					<div class="flex items-center gap-2">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							class="text-muted-foreground"
						>
							<path
								fill="currentColor"
								d="M2 3H0v18h24V3zm20 2v14H2V5zM10 7H6v4h4zm-6 6h8v4H4zm16-6h-6v2h6zm-6 4h6v2h-6zm6 4h-6v2h6z"
							></path>
						</svg>
						<span
							>Universidad Fidélitas, Ingenieria en sistemas</span
						>
					</div>
				</div>

				<p class="lg:text-lg leading-relaxed text-pretty prose-neutral">
					¡Hola! Soy Luis Miranda, <span class="shine-text">
						futuro
					</span> ingeniero en sistemas. Tengo 20 años, me gusta escribir
					cosas y resolver problemas. Disfruto mucho aprender nuevas tecnologias
					y desarrollar soluciones web ( y si vivo en <span
						class="text-green-400">Neovim</span
					> ). Actualmente desarrollando en
					<a
						href="https://fisioterapeuta-ep.vercel.app/"
						target="_blank"
						rel="noopener noreferrer"
						class="text-lg font-semibold hover:text-primary"
					>
						Clinica Selena!
					</a>
				</p>
			</div>

			<section
				class="max-w-7xl mx-auto mt-12 mb-6"
				id="projects"
				aria-label="Personal projects that i was part of"
			>
				<h2 class="text-xl md:text-2xl font-semibold mb-6">
					Proyectos
				</h2>

				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
				>
					<Card
						headerText="luisdavid01.me"
						description="Hace su trabajo"
					>
						<Badge
							className="text-orange-400 bg-orange-400/10 inset-ring-orange-400/20 my-3"
							text="Astro"
						/>

						<Badge
							className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
							text="TypeScript"
						/>
					</Card>

					<Card
						headerText="Fisioreapia Selena"
						headerLink="https://fisioterapeuta-ep.vercel.app/"
						description="Planea tus citas, manten un seguimiento de tu progreso."
					>
						<Badge
							className="text-purple-400 bg-purple-400/10 inset-ring-purple-400/20 my-3"
							text="NextJs"
						/>

						<Badge
							className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
							text="TypeScript"
						/>

						<Badge
							className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
							text="Go"
						/>
					</Card>
					<Card
						headerText="L01 Drive"
						headerLink="https://glittering-flan-b2b10b.netlify.app/"
						description="Sube y comparte archivos de forma privada."
					>
						<Badge
							className="text-purple-400 bg-purple-400/10 inset-ring-purple-400/20 my-3"
							text="NextJs"
						/>
						<Badge
							className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
							text="TypeScript"
						/>
					</Card>

					<Card
						headerText="JSON-Grabber"
						headerLink="https://github.com/LuisDavid01/json-grabber"
						description="Te ayuda a recordar scripts, make commands, lo que sea desde tu terminal."
					>
						<Badge
							className="text-rose-400 bg-rose-400/10 inset-ring-rose-400/20 my-3"
							text="Rust"
						/>
					</Card>

					<Card
						headerText="HTTP Server in C"
						headerLink="https://github.com/LuisDavid01/http-server-c"
						description="Un servidor HTTP siguiendo el estandar HTTP/1.1 escrito en C soporta multiples headers y tipos de contenido."
					>
						<Badge
							className="text-gray-400 bg-gray-400/10 inset-ring-gray-400/20 my-3"
							text="C"
						/>
					</Card>

					<Card
						headerText="Loan predictor ML model"
						headerLink="https://github.com/LuisDavid01/notebook-proyecto-big-data"
						description="Modelo de machine learning para predecir la aprobacion de prestamos bancarios. Usando random forest como algoritmo y sklearn con un 87% de acierto."
					>
						<Badge
							className="text-cyan-400 bg-cyan-400/10 inset-ring-cyan-400/20 "
							text="Python"
						/>
						<Badge
							className="text-amber-400 bg-amber-400/10 inset-ring-amber-400/20 "
							text="Jupyter"
						/>
					</Card>

					<Card
						headerText="Proximamente..."
						description="Mantente atento!"
					/>
				</div>
			</section>

			<section
				id="blog"
				aria-label="Blog posts"
				class="max-w-7xl mx-auto mt-12 mb-6"
			>
				<h3 class="text-xl md:text-2xl font-semibold mb-6">Blog</h3>
				<div>
					<ul class="space-y-6">
						{
							posts.map((post) => {
								const { slug, data } = post;
								const { title, date, updatedAt } = data;

								return (
									<li class="group border-b border-neutral-200 pb-4 last:border-b-0">
										<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
											<a
												href={`/blog/${slug}`}
												class="hover:text-primary font-medium text-lg 
													  decoration-neutral-300 
														hover:decoration-neutral-500 transition-colors duration-200"
											>
												{title}
											</a>

											<div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-3 text-sm">
												<span class="flex items-center gap-1 text-muted-foreground">
													<svg
														xmlns="http://www.w3.org/2000/svg"
														width="24"
														height="24"
														viewBox="0 0 24 24"
													>
														<path
															fill="currentColor"
															d="M15 2h2v2h4v18H3V4h4V2h2v2h6zM9 6H5v2h14V6zm-4 4v10h14V10zm2 2h8v2H7zm4 6v-2H7v2z"
														/>
													</svg>
													{updatedAt &&
													new Date(updatedAt) >
														new Date(date)
														? `actualizado: ${formatDate(updatedAt)}`
														: `creado: ${formatDate(date)}`}
												</span>
											</div>
										</div>
									</li>
								);
							})
						}
					</ul>
				</div>
			</section>
			<Footer />
		</div>
	</main>

	<script>
		import { animateText } from "../scripts/gsap";

		animateText("myName", "chars");
	</script>
</Layout>
