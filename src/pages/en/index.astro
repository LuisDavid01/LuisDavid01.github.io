---
import Welcome from "@/components/Welcome.astro";
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import Footer from "@/components/Footer.astro";
import Badge from "@/components/Badge.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { formatDate } from "@/utils/Date.ts";
const posts: CollectionEntry<"posts">[] = await getCollection("posts");
export const prerender = true;
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../../i18n/utils";
import { lenguageList } from "../../i18n/ui";
const currentLang = Astro.currentLocale || "es";
const translate = useTranslations(currentLang as keyof typeof lenguageList);
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Bienvenido a mi portafolio">
	<main class="min-h-screen">
		<Welcome />
		<div class="max-w-5xl mx-auto px-16 py-6">
			<div class="mt-12">
				<header class="mb-12">
					<div
						class="flex flex-col md:flex-row md:items-center md:justify-between mb-4"
					>
						<h1
							class="myName break-words text-2xl md:text-4xl font-bold mb-2 md:mb-0"
						>
							<span class="block md:inline">LuisDavid01 |</span>
							<span class="block md:inline">
								{translate("hero.me")}</span
							>
						</h1>

						<!-- Redes sociales -->
						<div
							class="top-socials flex gap-3 text-muted-foreground"
						>
							<a
								href="https://github.com/LuisDavid01"
								target="_blank"
								rel="noopener noreferrer"
								class="hover:text-primary transition-colors"
							>
								Github
							</a>
							<a
								href="https://www.linkedin.com/in/luisdavid01/"
								target="_blank"
								rel="noopener noreferrer"
								class="hover:text-primary transition-colors"
							>
								Linkedin
							</a>
						</div>
					</div>
				</header>
				<div class="space-y-2 mb-6">
					<div class="flex items-center gap-2">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							class="text-muted-foreground"
						>
							<path
								fill="currentColor"
								d="M8 2h2v2h2v2h-2v10H8V6H6V4h2zM4 8V6h2v2zm2 10v2H4v2H2V8h2v10zm0 0h2v-2H6zm6 0h-2v-2h2zm2-10V6h-2v2zm2 0h-2v10h-2v2h2v2h2v-2h2v-2h2v-2h2V2h-2v2h-2v2h-2zm0 0h2V6h2v10h-2v2h-2z"
							></path>
						</svg>
						<span>{translate("hero.location")}</span>
					</div>

					<div class="flex items-center gap-2">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							class="text-muted-foreground"
						>
							<path
								fill="currentColor"
								d="M2 3H0v18h24V3zm20 2v14H2V5zM10 7H6v4h4zm-6 6h8v4H4zm16-6h-6v2h6zm-6 4h6v2h-6zm6 4h-6v2h6z"
							></path>
						</svg>
						<span>{translate("hero.uni")}</span>
					</div>
				</div>

				<p
					class="lg:text-lg leading-relaxed text-pretty prose-neutral"
					set:html={translate("hero.desc")}
				/>
				<button
					id="email-me"
					class="break-words text-center underline underline-offset-3 hover:text-yellow-500"
				>
					<span class="text-yellow-500">Email:</span> luisdavid01 [at]
					proton [dot] me
				</button>
				<div
					id="toast"
					class="fixed bottom-4 right-4 bg-neutral-900 text-white z-50
         px-4 py-2 rounded-md shadow-lg
         opacity-0 translate-y-2 pointer-events-none
         transition-all duration-300"
				>
					{translate("hero.toastemail")}
				</div>
			</div>
		</div>
		<section
			class="max-w-8xl mx-16 mt-12 mb-6"
			id="projects"
			aria-label="Personal projects that i was part of"
		>
			<div
				class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 items-start"
			>
				<Card
					headerText={translate("proj.spiderq.title")}
					headerLink="https://spiderq.tech"
					imageLink="/spiderq-ss.png"
				>
					<p>{translate("proj.spiderq.desc")}</p>

					<Badge
						className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
						text="TypeScript"
					/>

					<Badge
						className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
						text="Go"
					/>
				</Card>

				<Card
					headerText={translate("proj.fisio.title")}
					headerLink="https://fisioterapeuta-ep.vercel.app/"
					imageLink="/selena-ss.webp"
				>
					<p>
						{translate("proj.fisio.desc")}
					</p>

					<Badge
						className="text-purple-400 bg-purple-400/10 inset-ring-purple-400/20 my-3"
						text="NextJs"
					/>

					<Badge
						className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
						text="TypeScript"
					/>

					<Badge
						className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
						text="Go"
					/>
				</Card>
				<Card
					headerText={translate("proj.ld01.title")}
					imageLink="/ld01-ss.webp"
				>
					<p>{translate("proj.ld01.desc")}</p>
					<Badge
						className="text-purple-400 bg-purple-400/10 inset-ring-purple-400/20 my-3"
						text="NextJs"
					/>
					<Badge
						className="text-blue-400 bg-blue-400/10 inset-ring-blue-400/20 my-3"
						text="TypeScript"
					/>
				</Card>

				<Card
					headerText="JSON-Grabber"
					headerLink="https://github.com/LuisDavid01/json-grabber"
					imageLink="/jg-ss.webp"
				>
					<p>{translate("proj.json-grabber.desc")}</p>
					<Badge
						className="text-rose-400 bg-rose-400/10 inset-ring-rose-400/20 my-3"
						text="Rust"
					/>
				</Card>
				<Card
					headerText={translate("proj.loan-ml-model.title")}
					headerLink="https://github.com/LuisDavid01/notebook-proyecto-big-data"
					imageLink="/loan-ss.webp"
				>
					<p>{translate("proj.loan-ml-model.desc")}</p>
					<Badge
						className="text-cyan-400 bg-cyan-400/10 inset-ring-cyan-400/20 "
						text="Python"
					/>
					<Badge
						className="text-amber-400 bg-amber-400/10 inset-ring-amber-400/20 "
						text="Jupyter"
					/>
				</Card>

				<Card
					headerText={translate("proj.http-server-c.title")}
					headerLink="https://github.com/LuisDavid01/http-server-c"
				>
					<p>{translate("proj.http-server-c.desc")}</p>
					<Badge
						className="text-gray-400 bg-gray-400/10 inset-ring-gray-400/20 my-3"
						text="C"
					/>
				</Card>

				<Card headerText={translate("proj.prox.title")} />
			</div>
		</section>

		<div class="max-w-5xl mx-auto px-16 py-6">
			<section
				id="blog"
				aria-label="Blog posts"
				class="max-w-7xl mx-auto mt-12 mb-6"
			>
				<h3 class="text-xl md:text-2xl font-semibold mb-6">Blog</h3>
				<div>
					<ul class="space-y-6">
						{
							posts.map((post) => {
								const { slug, data } = post;
								const { title, date, updatedAt } = data;

								return (
									<li class="group border-b border-neutral-200 pb-4 last:border-b-0">
										<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
											<a
												href={getRelativeLocaleUrl(
													currentLang,
													`/blog/${slug}`,
												)}
												class="hover:text-primary font-medium text-lg 
													  decoration-neutral-300 
														hover:decoration-neutral-500 transition-colors duration-200"
											>
												{title}
											</a>

											<div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-3 text-sm">
												<span class="flex items-center gap-1 text-muted-foreground">
													<svg
														xmlns="http://www.w3.org/2000/svg"
														width="24"
														height="24"
														viewBox="0 0 24 24"
													>
														<path
															fill="currentColor"
															d="M15 2h2v2h4v18H3V4h4V2h2v2h6zM9 6H5v2h14V6zm-4 4v10h14V10zm2 2h8v2H7zm4 6v-2H7v2z"
														/>
													</svg>
													{updatedAt &&
													new Date(updatedAt) >
														new Date(date)
														? `${translate("blog.updatedat")} ${formatDate(updatedAt, currentLang)}`
														: `${formatDate(date)}`}
												</span>
											</div>
										</div>
									</li>
								);
							})
						}
					</ul>
				</div>
			</section>
			<div></div>

			<Footer />
		</div>

		<script>
			import { animateText } from "@/scripts/gsap";

			animateText("myName", "chars");
			document.addEventListener("astro:page-load", () => {
				const emailbtn = document.getElementById("email-me");
				const toast = document.getElementById("toast");
				emailbtn?.addEventListener("click", async () => {
					await navigator.clipboard.writeText(
						"luisdavid01@proton.me",
					);
					toast?.classList.remove("opacity-0", "translate-y-2");
					toast?.classList.add("opacity-100", "translate-y-0");

					setTimeout(() => {
						toast?.classList.add("opacity-0", "translate-y-2");
						toast?.classList.remove("opacity-100", "translate-y-0");
					}, 2000);
				});
			});
		</script>
	</main>
</Layout>
